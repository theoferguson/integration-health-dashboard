{
  "name": "integration-health-dashboard",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @ihd/api",
    "dev:web": "npm run dev -w @ihd/web",
    "build": "npm run build -w @ihd/shared && npm run build -w @ihd/api && npm run build -w @ihd/web",
    "build:shared": "npm run build -w @ihd/shared",
    "build:api": "npm run build -w @ihd/api",
    "build:web": "npm run build -w @ihd/web",
    "simulate": "npm run simulate -w @ihd/simulator",
    "start": "npm run start -w @ihd/api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
